<Window 
        x:Class="ContactApp.ContactWindow"
        x:Name="ContactWindowEdit"
        xmlns:vm="clr-namespace:ContactApp.ViewModel"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
    
        Title="Добавить/Редактировать контакт" Height="250" Width="500" Icon="\Resources\Images\icons8-edit-48.png" ResizeMode="NoResize" >

    <!--#region DataContext-->
    
    <Window.DataContext>
        <vm:ContactWindowViewModel/>
    </Window.DataContext>
    
    <!--#endregion-->

    <!--#region Resources-->

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!--#endregion-->

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition />
            <RowDefinition Height="5"/>
            <RowDefinition />
            <RowDefinition Height="5"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Content="Фамилия" FontSize="15" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" x:Name="ContactWindowSurnameTextBox" FontSize="15" Text="{Binding NewSurname, Mode=TwoWay}"
                 ToolTip="Фамилия должна содержать от 2 до 50 символов и начинаться с большой буквы."/>

        <Label Grid.Row="2" Content="Имя" FontSize="15" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="ContactWindowNameTextBox" FontSize="15" Text="{Binding NewName, Mode=TwoWay}" 
                 ToolTip="Имя должно содержать от 2 до 50 символов и начинаться с большой буквы."/>

        <Label Grid.Row="4" Content="Отчество" FontSize="15" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="4" x:Name="ContactWindowPatronymicTextBox" FontSize="15" Text="{Binding NewPatronymic, Mode=TwoWay}" 
                 ToolTip="Отчество должно содержать от 2 до 50 символов и начинаться с большой буквы."/>

        <Label Grid.Row="6" Content="Телефон" FontSize="15" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="6" x:Name="ContactWindowPhoneTextBox" FontSize="15" Text="{Binding NewPhone, Mode=TwoWay}" 
                 ToolTip="Номер телефона должен соответствовать маске +79*********"/>

        <Label Grid.Row="8" Content="Почта" FontSize="15" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="8" x:Name="ContactWindowEmailTextBox" FontSize="15" Text="{Binding NewEmail, Mode=TwoWay}"/>

        <Button Grid.Row="10" Grid.ColumnSpan="2" Content="Принять" HorizontalAlignment="Right" Width="70" Height="30"
                Command="{Binding AceptChangesCommand}" CommandParameter="{Binding ElementName=ContactWindowEdit}"/>
    </Grid>
</Window>